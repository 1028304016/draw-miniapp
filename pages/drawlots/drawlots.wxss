.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title .label{
	display: flex;
	justify-content: center;
	align-items: center;
}
.sel-result{
	display: flex;
	flex-direction: row;
}
.sel-name{
	font-size: 16px;
	font-weight: 500;
	color: #000;
}
.sel-con{
	
	font-size: 16px;
	font-weight: 500;
	color: #000;
	margin-left: 170px;
}
.mark{
		width: 100%;
	  height: 100%;
	  position: absolute;
	  background: rgba(0, 0, 0, 0.6);
	  top: 0;
	  left: 0;
	  z-index: 100;
	  cursor: pointer;
	  transition: all 0.15s;
}


